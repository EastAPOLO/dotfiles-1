# exec on keybind
bindsym $mod+u exec --no-startup-id i3-sensible-terminal --class float_this -e "vim /home/forell/.cache/updates"

bindsym $mod+t exec --no-startup-id i3-sensible-terminal --class float_this -e "vim /home/forell/todo/todo.txt"
bindsym $mod+Shift+t exec --no-startup-id i3-sensible-terminal --class float_this -e "vim /home/forell/todo/done.txt"

#######
# stuff
exec --no-startup-id nm-applet

#######
## lock
bindsym $mod+Control+L exec "i3lock -c 000000"
bindsym $mod+semicolon exec ~/bin/i3/shutdown_menu

#############
## media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%; exec --no-startup-id pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%; exec --no-startup-id pkill -RTMIN+10 i3blocks

bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight + 8; exec --no-startup-id sleep 1; exec --no-startup-id pkill -RTMIN+12 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight - 8; exec --no-startup-id sleep 1; exec --no-startup-id pkill -RTMIN+12 i3blocks

############
# keyboard l
bindsym $mod+KP_Subtract exec --no-startup-id xkb-switch -n;exec --no-startup-id pkill -RTMIN+11 i3blocks

############
## autostart
exec --no-startup-id xfce4-power-manager

exec --no-startup-id compton --backend glx --paint-on-overlay --glx-no-stencil --vsync opengl-swc --config ~/.config/compton.conf -b &

exec --no-startup-id redshift-gtk

exec devmon &

exec unclutter --timeout 1 --jitter 10 &

for_window [class="Keepassx2"] floating enable
exec --no-startup-id keepassx2

exec --no-startup-id i3-msg 'workspace $ws10; exec discord-canary'
for_window [class="Skype"] sticky enable

exec --no-startup-id gnome-keyring-daemon

exec --no-startup-id rm -rf ~/.local/share/Trash
#########################################
# screenshot keybinds and stuff like that
bindsym Print exec --no-startup-id gnome-screenshot

bindsym --release Shift+Print exec --no-startup-id gnome-screenshot -a

bindsym Mod1+Sys_Req exec --no-startup-id gnome-screenshot -w

bindsym --release Control+Print exec --no-startup-id gnome-screenshot -c

bindsym --release Control+Shift+Print exec --no-startup-id gnome-screenshot -ac

bindsym --release Control+Mod1+Sys_Req exec --no-startup-id gnome-screenshot -wc

bindsym --release Control+Shift+Mod1+Sys_Req exec --no-startup-id gnome-screenshot -i


new_window pixel 3
focus_follows_mouse no

# windows I like to have floated, for whatever reason
for_window [class="Pavucontrol"] floating enable
for_window [class="Org.gnome.Characters"] floating enable
for_window [class="^float_this$"] floating enable

